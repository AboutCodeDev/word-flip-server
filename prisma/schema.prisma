
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  username   String      @unique
  password   String
  categories Category[]  // 1:N ли Category
  sessions   Session[]   // 1:N ли Session
}

model Session {
  id         Int      @id @default(autoincrement())
  userId     Int
  createdAt  DateTime @default(now())
  endAt      DateTime?

  user       User     @relation(fields: [userId], references: [id])
}

model Category {
  id       Int     @id @default(autoincrement())
  name     String
  userId   Int
  user     User    @relation(fields: [userId], references: [id])
  words    Word[]  // 1:N ли Word
}

model Word {
  id          Int     @id @default(autoincrement())
  text        String
  translation String
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}
